<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="8dp">


        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="15:00" />

        <TextView
            android:id="@+id/match_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/start_time"
            tools:text="Live"
            android:padding="1dp"

            />

        <TextView
            android:id="@+id/home_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/home_score"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            tools:text="L. Littler" />

        <TextView
            android:id="@+id/away_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_player_name"
            android:layout_toStartOf="@id/away_score"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            tools:text="L. Humphries" />


        <TextView
            android:id="@+id/home_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/start_time"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            tools:text="9" />

        <TextView
            android:id="@+id/away_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_score"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="25dp"
            android:layout_toStartOf="@id/start_time"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            tools:text="5" />

        <TextView
            android:id="@+id/tournament_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            android:layout_below="@id/away_player_name"
            tools:text="PDC World Dart Championships" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/darts_scoreboard"
        android:textSize="50sp" />

    <Button
        android:id="@+id/fiveoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:text="@string/fiveo" />

    <Button
        android:id="@+id/threeoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:text="@string/threeo" />

    <Button
        android:id="@+id/sevenoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:text="@string/seveno" />

    <Button
        android:id="@+id/addPlayerBtn"
        android:layout_width="231dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:text="@string/addPlayer"/>

</LinearLayout>